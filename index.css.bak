* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
    Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
}
.h1 {
  font-size: 50px;
  line-height: 64px;
  color: #222;
}
.h2 {
  font-size: 46px;
  line-height: 54px;
  color: #222;
}
.h4 {
  font-size: 20px;
  color: #222;
}
.h6 {
  font-weight: 700;
  font-size: 12px;
}
.p {
  font-size: 16px;
  color: #465b52;
  margin: 15px 0 20px 0;
}
.section-p1 {
  padding: 40px 80px;
}
.section-m1 {
  padding: 40px 0;
}
.body {
  width: 100%;
}
.logo {
  height: 100px;
  width: 130px;
}
#header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 2px 80px;
  background: #0a0a0a;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.06);
}
#navbar {
  display: flex;
  align-items: center;
  justify-content: center;
}
#navbar li {
  list-style: none;
  padding: 0 20px;
  position: relative;
}
#navbar li a {
  text-decoration: none;
  font-size: 16px;
  font-weight: 600;
  color: #f95700ff;
  transition: 0.3s ease;
}
#navbar li a:hover,
#navbar li a.active {
  color: #00a4ccff;
}

#navbar li a.active::after,
#navbar li a:hover::after {
  content: "";
  width: 30%;
  height: 2px;
  background: #f95700ff;
  position: absolute;
  bottom: -4px;
  left: 20px;
}

.homepage {
  background-size: cover;
  background-image: url(media/homepage2.png);
  height: 90vh;
  width: 100%;
  padding: 0 80px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  background-color: rgb(255, 255, 255);
}
.homepage h1 {
  font-size: 80px;
  line-height: 64px;
  color: #f95700ff;
}
.homepage h2 {
  font-size: 60px;
  line-height: 54px;
  color: #00a4ccff;
}
.homepage h4 {
  font-size: 30px;
  color: rgb(0, 0, 0);
}
.homepage p {
  font-size: 20px;
  color: #202020;
  margin: 15px 0 20px 0;
}
button {
  padding: 15px 25px;
  margin: 20px;
  font-size: 16px;
  letter-spacing: 1px;
  border: 2px solid #00a4ccff;
  border-radius: 30px;
  color: rgb(0, 0, 0);
  cursor: pointer;
  background: linear-gradient(to right, transparent 50%, #f95700ff 50%);
  background-size: 200%;
  background-position: left;
  transition: background-position 0.5s;
}
button:hover {
  background-position: right;
  color: #ffffff;
}
.btn2 {
  margin-left: 600px;
  padding: 10px 15px;
}
.categories {
  height: 4in;
  width: 14.05in;
  background-color: rgb(0, 0, 0);
}
.line {
  height: 3.2px;
  width: 2.5in;
  background-color: #f95700ff;
  margin-left: 4.7in;
  border-radius: 4px;
}

.categories h1 {
  font-size: 27px;
  line-height: 50px;
  color: rgb(0, 105, 131);
  margin-left: 4.5in;
}
.categories-list {
  width: 1.5in;
  height: 1.5in;
  border-radius: 10px;
  margin: auto;
  background-color: rgb(0, 105, 131);
  cursor: pointer;
  transition: 0.5s;
}
.categories-list:hover {
  box-shadow: 0px 0px 5px 5px #f95700ff;
  transition: 0.5s;
}
.categories-list h1 {
  margin-left: 35%;
  font-size: 20px;
  line-height: 34px;
  color: rgb(255, 255, 255);
}
.categories-list a {
  text-decoration: none;
}

.categories-list img {
  margin-left: 6px;
  height: 1in;
  width: 1.3in;
}

.contents {
  display: flex;
}
.featured-adverts h1 {
  font-size: 27px;
  line-height: 50px;
  color: rgb(0, 105, 131);
  margin-left: 6in;
}
.featured-adverts {
  height: 10in;
  width: 14.05in;
  background-color: rgb(235, 201, 183);
}
.featured-adverts .line {
  height: 3.2px;
  width: 1.5in;
  background-color: #f95700ff;
  margin-left: 6.1in;
  border-radius: 4px;
}
.featured-adverts img {
  border-radius: 10px;
}
.content1 {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-around;
}
.content {
  transition: transform 0.7s;
}
.content:hover {
  transform: translateY(-5px);
}
.content a {
  text-decoration: none;
  color: #f95700ff;
}
.content a:hover {
  color: rgb(0, 37, 250);
}

.content2 {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-around;
}
/* bonanza */
.bonanza {
  height: 6.5in;
  width: 14.05in;
  background: radial-gradient(rgb(253, 239, 239), rgb(235, 201, 183));
  flex-basis: 50%;
  min-width: 300px;
}

.bonanza img {
  width: 3in;
  height: 3in;
}
.bonanza .bnz {
  font-size: 30px;
  line-height: 50px;
  color: rgb(0, 105, 131);
  margin-left: 6in;
}
.bonanza .line {
  height: 3.2px;
  width: 1in;
  background-color: #f95700ff;
  margin-left: 6.1in;
  border-radius: 4px;
}
.bonanza .promo .content3 {
  margin-left: 5.5in;
}
.bonanza .promo h1 {
  font-size: 45px;
  line-height: 45px;
}
.bonanza .promo a {
  text-decoration: none;
}
.footer {
  background-color: #202020;
  width: 100%;
  height: 1in;
}
.footer .footer-line {
  width: 9in;
  margin: auto;
  margin-top: 10px;
}
.footer .Reg_number {
  color: #ffffff;
  margin-left: 6in;
}
